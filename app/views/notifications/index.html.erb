<div class="container">
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
         
          <ul class="notification-unread-list">
               <h2> Unread Notifications</h2>
          <%= render current_user.notifications.where(read: false).order('created_at DESC') %>
          </ul>
      </div>
      
      <div class="col-md-6 col-md-offset-3">
          
          <ul class="notification-read-list">
              <h2> Read Notifications</h2>
          <%= render current_user.notifications.where(read: true).order('created_at DESC') %>
          </ul>
      </div>
  </div>
</div>
