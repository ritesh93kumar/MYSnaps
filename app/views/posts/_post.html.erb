<div class="posts-wrapper">
    
    <div class="post">
        
        <div class="post-head">
            <div class="thumb-img"></div>
            <% if post.user.avatar_file_name.to_s.include?("googleusercontent") %>
               <% imagesource = post.user.avatar_file_name %>
            <% elsif post.user.avatar_file_name.to_s.length == 0%>
               <%  imagesource = 'assets/default-avatar.jpg' %>
            <% else %>
               <%  imagesource = post.user.avatar.url %>
            <% end %>
            
            <div class="user-name">
                <img class="img-circle" style="border-radius:100%; width:1cm; height:1cm " src="<%= imagesource %>">
                <%= link_to post.user.name, profile_path(post.user.user_name) %>
            </div>
        </div>
        
        <div class="image center-block">
            <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
        </div>
        
        <div class="post-bottom">
            <%= render 'posts/likes', post: post %>
            <div class="caption">
                <div class="caption-content">
                    <div class="user-name">
                        <% if post.user.user_name.length > 15 %>
                        <%= link_to post.user.name, profile_path(post.user.user_name) %>
                        <% else %>
                        <%= link_to post.user.name, profile_path(post.user.user_name) %>
                        <% end %>
                    </div>
                    <div class="time-ago">
                        <%= time_ago_in_words post.created_at %>
                    </div>
                    <%= post.caption %>
                </div>
                <div class="comments" id="comments_<%= post.id %>">
                    <% if post.comments.any? %>
                    <div class="paginator" id="#comments-paginator-<%= post.id %>">
                        <% unless post.comments.count <= 4 %>
                        <%= link_to "view all #{post.comments.count} comments", post_comments_path(post), remote: true, class: 'more-comments', id: "more_comments_#{post.id}", data: {post_id: "#{post.id}", type: "html", value: "#{post.comments.count}"} %>
                        <% end %>
                    </div>
                    <%= render post.comments.last(4), post: post %>
                    <% end %>
                </div>
            </div>
        </div>
        
        <div class="comment-like-form row">
            <div class="col-sm-1 like-button">
                <%= link_to '', like_post_path(post.id), remote: true, id: "like_#{post.id}",class: "glyphicon #{liked_post post}"%>
            </div>
            <div class="comment-form col-sm-11">
                <%= form_for([post, post.comments.build], remote: true) do |f| %>
                <%= f.text_field :content, placeholder: 'Add a comment...', class: "comment_content", id: "comment_content_#{post.id}" %>
                <% end %>
            </div>
        </div>
    
    </div>
</div>
